<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="24dp"
    android:paddingTop="24dp"
    android:paddingEnd="24dp"
    android:background="#F8F8F8"
    tools:context=".Signup">

    <!-- Header Section -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Back Icon -->
            <ImageView
                android:id="@+id/back_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/signupback"
                android:layout_centerVertical="true"
                android:contentDescription="Back" />
        </RelativeLayout>
    </RelativeLayout>

    <!-- Main Content Section -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp">

        <!-- Email Label -->

        <!-- Email Input Box -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/sfprodisplaybold"
            android:text="Enter your code"
            android:textColor="#34495E"
            android:textSize="20sp" />

    </RelativeLayout>

    <!-- OTP Boxes -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="0dp">

        <!-- First Box -->
        <EditText
            android:id="@+id/otp_box_1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="8dp"
            android:gravity="center"
            android:textSize="18sp"
            android:background="@drawable/otp_box_background"
            android:inputType="number"
            android:maxLength="1" />

        <!-- Second Box -->
        <EditText
            android:id="@+id/otp_box_2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="8dp"
            android:gravity="center"
            android:textSize="18sp"
            android:background="@drawable/otp_box_background"
            android:inputType="number"
            android:maxLength="1" />

        <!-- Third Box -->
        <EditText
            android:id="@+id/otp_box_3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="8dp"
            android:gravity="center"
            android:textSize="18sp"
            android:background="@drawable/otp_box_background"
            android:inputType="number"
            android:maxLength="1" />

        <!-- Fourth Box -->
        <EditText
            android:id="@+id/otp_box_4"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="8dp"
            android:gravity="center"
            android:textSize="18sp"
            android:background="@drawable/otp_box_background"
            android:inputType="number"
            android:maxLength="1" />
    </LinearLayout>

    <!-- Message -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="We send a 4-digit code to verify your phone number."
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp" />

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Next"
            android:layout_marginStart="120dp"
            android:layout_marginEnd="120dp"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/sfprodisplaysemibold" />

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="90dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="90dp"
            android:background="@drawable/flag_transparent"
            android:fontFamily="@font/sfprodisplaysemibold"
            android:text="Resend code"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:icon="@drawable/resendcode"
            app:iconTint="@color/black" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/editphonenumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Edit phone number"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:fontFamily="@font/sfprodisplaysemibold"
            android:background="@drawable/flag_transparent"
            app:icon="@drawable/phoneedit"
            app:iconTint="@color/black"/>

    </LinearLayout>
</LinearLayout>
